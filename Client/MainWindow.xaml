<Window x:Name="Srs" x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="622" Width="1237">
    <Grid>
        <ComboBox x:Name="cboPaymentType" HorizontalAlignment="Left" Margin="19,184,0,0" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="cboShootingType" HorizontalAlignment="Left" Margin="19,120,0,0" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="cboUser" HorizontalAlignment="Left" Margin="19,56,0,0" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="cboCaliber" HorizontalAlignment="Left" Margin="19,248,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="Bruger:" HorizontalAlignment="Left" Margin="36,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Skydning:" HorizontalAlignment="Left" Margin="36,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Betalings type:" HorizontalAlignment="Left" Margin="29,153,0,0" VerticalAlignment="Top"/>
        <Label Content="Kaliber" HorizontalAlignment="Left" Margin="36,217,0,0" VerticalAlignment="Top"/>
        <Button Content="Opret skydning" HorizontalAlignment="Left" Margin="29,288,0,0" VerticalAlignment="Top" Width="136" Click="addShootingButton_click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9E9E9E" Offset="0.003"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Igangværende skydninger:" HorizontalAlignment="Left" Margin="195,30,0,0" VerticalAlignment="Top"/>
        <Button Content="Opret bruger" HorizontalAlignment="Left" Margin="29,5,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click" Height="25">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFCFCFCF" Offset="0.007"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="446" Margin="195,61,0,0" VerticalAlignment="Top" Width="958" FrozenColumnCount="1" BorderBrush="#897C0000" Background="White" Foreground="#DD000000" FontWeight="Bold" FontFamily="Segoe UI Black" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding }" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tidspunkt" Binding="{Binding CreationDate,StringFormat=\{0:dd.MM.yy HH:mm:ss\}}" IsReadOnly="True" />
                <DataGridTextColumn Header="Caliber" Binding="{Binding Caliber1}" IsReadOnly="True" />
                <DataGridTextColumn Header="Betalingstype" Binding="{Binding PaymentTypes}" IsReadOnly="True" />
                <DataGridTextColumn Header="Skud" Binding="{Binding Shoots}" IsReadOnly="false"/>
                <DataGridTextColumn Header="Skydning begyndt" Binding="{Binding isDone}" IsReadOnly="true"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Start skydning" Click="startShootingButton">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
