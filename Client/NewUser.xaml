<Window x:Class="Client.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Ny bruger" Height="400" Width="450
">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="154*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnAddUserButton" Content="Tilføj bruger" HorizontalAlignment="Left" Margin="87,192,0,0" VerticalAlignment="Top" Width="111" Click="addUserButton_Click" Grid.ColumnSpan="3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF7E7E7E" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="firstNameBox" HorizontalAlignment="Left" Height="23" Margin="87,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
        <TextBox x:Name="lastNameBox" HorizontalAlignment="Left" Height="23" Margin="87,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
        <Label Content="Fornavn" HorizontalAlignment="Left" Margin="20,94,0,0" VerticalAlignment="Top"/>
        <Label Content="Efternavn" HorizontalAlignment="Left" Margin="20,134,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstCalibreListBox" HorizontalAlignment="Left" Height="249" Margin="118.918,64,0,0" VerticalAlignment="Top" Width="154" Background="#FFDEDEDE" SelectionMode="Multiple" Grid.Column="2"/>
        <Label Content="Kalibre:" HorizontalAlignment="Left" Margin="169.918,22,0,0" VerticalAlignment="Top" Grid.Column="2"/>

    </Grid>
</Window>
